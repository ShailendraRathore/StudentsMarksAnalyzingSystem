<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.LoginController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="300.0" prefWidth="300.0" GridPane.rowIndex="1">
         <children>
            <TextField fx:id="usernameText" layoutX="76.0" layoutY="92.0" promptText="Username" />
            <Button fx:id="loginButton" layoutX="128.0" layoutY="181.0" mnemonicParsing="false" onAction="#handleButtonAction" text="Login" />
            <Label fx:id="loginLabel" layoutX="97.0" layoutY="28.0" text="Welcome">
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordText" layoutX="76.0" layoutY="138.0" promptText="Password" />
            <Label fx:id="errorText" alignment="CENTER" layoutX="100.0" layoutY="241.0" textAlignment="CENTER" textFill="#eb1010" />
            <Button fx:id="reportBtn" layoutX="108.0" layoutY="216.0" mnemonicParsing="false" onAction="#reportBtnClicked" prefHeight="25.0" prefWidth="86.0" text="Report Cards" />
         </children>
         <effect>
            <Glow />
         </effect>
      </AnchorPane>
   </children>
</GridPane>
